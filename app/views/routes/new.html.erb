<%= form_for @route do |f| %>
  <%= f.label :train_id %>
  <%= f.collection_select(:train_id, Train.all, :id, :name) %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :number %>
  <%= f.number_field :number %>

  <%= f.label :direction %>
  <%= f.select :direction, options_for_select(["Northbound", "Southbound"]) %>

  <%= f.submit "Submit" %>
<% end %>
